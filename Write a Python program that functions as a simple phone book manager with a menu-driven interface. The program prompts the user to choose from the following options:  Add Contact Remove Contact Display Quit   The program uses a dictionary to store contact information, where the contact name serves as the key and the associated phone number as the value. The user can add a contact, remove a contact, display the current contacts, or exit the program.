phone_book = {}

while True:
	print("1. Add Contact")
	print("2. Remove Contact")
	print("3. Display")
	print("4. Quit")

	choice = input("Enter choice (1-4): ")

	if(choice == "1"):
		name = input("Name: ")
		phone = input("Phone number: ")
		phone_book[name] = phone
	elif(choice == "2"):
		name = input("Name: ")
